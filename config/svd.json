{
    "input": {
        "input_image_id": "svd_input"
    },

    "output": {
        "output_image_id": "svd_output"
    },

    "verification": {
        "tolerance": 2,
        "error_rate_threshold": 0.01,
        "golden_source": "file",
        "golden_file": "test_data/svd/golden_sigma1.bin"
    },


    "kernels": {
        "v0": {
            "description": "SVD of structure tensor per pixel",
            "host_type": "standard",
            "kernel_option": "",
            "kernel_file": "examples/svd/cl/svd_1.cl",
            "kernel_function": "svd",
            "work_dim": 2,
            "global_work_size": [1920, 1088],
            "local_work_size": [16, 16],
            "kernel_args": [
                {"i_buffer": ["uchar", "src"]},
                {"o_buffer": ["float", "sigma1"]},
                {"o_buffer": ["float", "sigma2"]},
                {"o_buffer": ["float", "angle"]},
                {"param": ["int", "src_width"]},
                {"param": ["int", "src_height"]}
            ]
        },
        "v1": {
            "description": "SVD patch with coherence output",
            "host_type": "standard",
            "kernel_option": "",
            "kernel_file": "examples/svd/cl/svd_2.cl",
            "kernel_function": "svd_patch",
            "work_dim": 2,
            "global_work_size": [1920, 1088],
            "local_work_size": [16, 16],
            "kernel_args": [
                {"i_buffer": ["uchar", "src"]},
                {"o_buffer": ["float", "s1"]},
                {"o_buffer": ["float", "s2"]},
                {"o_buffer": ["float", "coherence"]},
                {"param": ["int", "src_width"]},
                {"param": ["int", "src_height"]}
            ]
        }
    }
}
